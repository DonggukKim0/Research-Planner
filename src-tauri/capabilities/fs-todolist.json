{
    "$schema": "../gen/schemas/desktop-schema.json",
    "identifier": "fs-todolist",
    "description": "Allow reading/writing Obsidian todolist markdown files",
    "windows": ["main"],
    "permissions": [
        "fs:allow-read-text-file",
        "fs:allow-write-text-file",
        "fs:allow-exists",
        "dialog:allow-open",
        {
            "identifier": "fs:scope",
            "allow": [
                { "path": "$HOME/**" }
            ]
        }
    ]
}